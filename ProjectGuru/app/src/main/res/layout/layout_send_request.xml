<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_shade1">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:elevation="12dp"
                card_view:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:background="@color/primary_light"
                android:padding="@dimen/card_margin">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="@dimen/edt_padding_vertical"
                    android:text="kdjlkdjfld"
                    android:textColor="@color/name"
                    android:textSize="22dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/tv_unv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:drawableLeft="@drawable/ic_university"
                    android:drawablePadding="@dimen/edt_padding_vertical"
                    android:text="ksldjflkdslf"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/tv_works_for"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_unv"
                    android:drawableLeft="@drawable/ic_workingfor"
                    android:drawablePadding="@dimen/edt_padding_vertical"
                    android:text="kdjlkdjfld"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_works_for"
                    android:drawableLeft="@drawable/ic_exel"
                    android:drawablePadding="@dimen/edt_padding_vertical"
                    android:text="kdjlkdjfld"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_skills"
                    android:drawableLeft="@drawable/ic_city"
                    android:drawablePadding="@dimen/edt_padding_vertical"
                    android:text="kdjlkdjfld"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_city"
                    android:layout_marginTop="@dimen/edt_padding_vertical">

                    <Button
                        android:id="@+id/bt_send_req"
                        style="@style/CustomButtonTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/edt_padding_vertical"
                        android:layout_weight="1"
                        android:text="@string/send_req" />

                    <Button
                        android:id="@+id/bt_cancel"
                        style="@style/CustomButtonTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cancel"

                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

