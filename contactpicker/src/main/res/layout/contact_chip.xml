<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/size_75_dp"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="@dimen/size_60_dp"
                android:layout_height="@dimen/size_60_dp"
                android:layout_margin="@dimen/size_5_dp"
                android:elevation="@dimen/size_12_dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardBackgroundColor="@color/sky_blue"
                app:cardCornerRadius="@dimen/size_30_sp">
                <TextView
                    android:id="@+id/tv_contact_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/a"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/size_30_sp" />
            </android.support.v7.widget.CardView>
        </FrameLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="@dimen/size_5_dp"
            android:layout_marginRight="@dimen/size_5_dp"
            android:layout_width="@dimen/size_27_dp"
            android:layout_height="@dimen/size_27_dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_close" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/framelayout"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/not_specified"
            android:textSize="@dimen/size_16_sp" />
    </RelativeLayout>
</LinearLayout>