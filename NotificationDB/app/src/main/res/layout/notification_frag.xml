<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:paddingLeft="@dimen/size_5_dp"
    android:paddingRight="@dimen/size_5_dp"
    >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_notif"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/size_5_dp"
        />
    <LinearLayout
        android:id="@+id/ll_no_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >
        <ImageView
            android:layout_width="@dimen/size_100_dp"
            android:layout_height="@dimen/size_100_dp"
            android:src="@drawable/android"
            android:contentDescription="@string/no_items"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items"
            >
        </TextView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>