<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:paddingLeft="@dimen/size_5_dp"
    android:paddingRight="@dimen/size_5_dp">

    <ListView
        android:id="@+id/lv_toast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/size_5_dp" />

    <LinearLayout
        android:id="@+id/ll_no_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/size_100_dp"
            android:layout_height="@dimen/size_100_dp"
            android:contentDescription="@string/no_items"
            android:src="@drawable/android" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>